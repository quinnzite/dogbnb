<div class="main-dogs-container">
  <div class="dogs-container">
    <% if @dogs.length == 0 %>
      <h6 class="header">There are no Dogs in <%= @location %></h6>
    <% elsif @dogs.length == 1 %>
      <h6 class="header">There is <%= @dogs.all.length %> Dog in <%= @location %></h6>
    <% elsif @dogs.length > 1 %>
      <h6 class="header">There are <%= @dogs.all.length %> Dogs in <%= @location %></h6>
    <% end %>
    <div class="container" style="margin: 17px;">

    <div class="container">
      <div class="cards">
      <% @dogs.each do |dog| %>
        <div class="card">
          <%= link_to dog_path(dog.id) do %>
          <% if dog.photo.present? %>
            <%= cl_image_tag dog.photo, height: 230, width: 190, crop: :fill, class:"card-img-top" %>
          <% else %>
            <%= cl_image_tag "https://www.missingdogsuk.co.uk/wp-content/plugins/wp-job-manager-resumes/assets/images/candidate.png", height: 190, width: 190, crop: :fill,class:"card-img-top" %>
          <% end %>
          <% end %>
          <div class="index-card-body">
            <h3 class="index-card-title"><%= dog.name.capitalize %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
    <%# if policy(Dog).create? %>
      <%#= link_to "New Dog", new_dog_path %>
    <%# end %>
  </div>
  <% if !Dog.all.nil? %>
  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <% end %>
</div>

