<div class="navbar navbar-expand-sm navbar-light navbar-pawpal">
  <div class="logo"> <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "LogoMakr_3cuTYO.png" %>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="logout">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <% if current_user.photo.present? %>
              <%= cl_image_tag current_user.photo, height: 400, width: 400, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag "https://icon-library.net/images/default-user-icon/default-user-icon-8.jpg", height: 300, width: 400, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <div class="login">
      <%= link_to "Sign Up", new_user_registration_path , class: "nav-link" %>
      <%= link_to "Login", user_session_path , class: "nav-link" %>
    </div>
  <% end %>
</div>
